{
  "name": "screenshot-tester-server",
  "version": "0.0.0",
  "main": "index.js",
  "author": "Niklas Mischkulnig",
  "license": "MIT",
  "scripts": {
    "start": "micro",
    "dev": "micro-dev",
    "deploy": "now --public && now alias && now rm screenshot-tester-server -y -s",
    "lint": "prettier --use-tabs --tab-width=4 --write index.js comment.js"
  },
  "dependencies": {
    "micro": "^9.3.2",
    "micro-query": "^0.3.0",
    "micro-upload": "^1.0.1",
    "mongodb": "^3.0.10",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5"
  },
  "devDependencies": {
    "micro-dev": "^3.0.0",
    "now": "^11.2.1",
    "prettier": "^1.13.4"
  },
  "engines": {
    "node": ">=10"
  },
  "now": {
    "alias": "screenshot-tester-server.mischnic.ml",
    "env": {
      "NODE_ENV": "production",
      "DOMAIN": "@sts-domain",
      "DB_URL": "@sts-db",
      "GH_USER": "mischnic",
      "GH_TOKEN": "@sts-gh-token"
    },
    "files": [
      "index.js",
      "package.json",
      "yarn.lock"
    ]
  }
